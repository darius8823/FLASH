<div class="container">
    <% if user_signed_in? && !current_user.check_confirmed? %>
    <h1>Waiting to be confirmed by Executive</h1>
    <% else %>
    <h2><b>Events</b></h2>
    <%= month_calendar(attribute: :start_timestamp, end_attribute: :end_timestamp, events: @events) do |date, events| %>
    <div class="d-flex flex-column justify-content-around align-items-stretch" style="cursor:pointer;" onclick="location.href='<%= index_day_events_path(date: date) %>'" title="Go to events for <%= date %>">
        <%= date.day %>
        <div class="d-flex justify-content-center">
            <% if events.any? %>
            <%= pluralize(events.size, 'Event') %>
            <% else %>
            <br>
            <% end %>
        </div>
    </div>
    <% end %>
    <% end %>
</div>