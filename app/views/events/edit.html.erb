<div class="container">
    <%= form_for( @event ) do |f| %>
    <%= render partial: 'form', locals: {f:f} %>

    <div class="btn-group">
        <%= link_to "Back to Event", event_path(@event), class: "btn btn-secondary" %>
        <%= f.submit "Update Event", disable_with: 'Updating Event...', class: "btn btn-primary" %>
    </div>
    <% end %>
</div>