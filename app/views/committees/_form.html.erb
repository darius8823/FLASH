<%= form_with(model: committee) do |form| %>
  <h2>Create/Update Committee</h2>

  <% if committee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(committee.errors.count, "error") %> prohibited this committee form being saved</h2>

      <ul>
        <% committee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, :class => "form-control" %>
  </div>

  <div class="btn-group mt-4">
    <%= link_to 'Back', committees_path, class:"btn btn-secondary" %>
    <%= form.submit :class => "btn btn-success" %>
  </div>
<% end %>